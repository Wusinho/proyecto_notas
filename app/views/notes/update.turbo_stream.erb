<% if @note.valid? %>
  <%= turbo_stream.replace "edit_card" do %>
    <%= render partial: "full_note", locals: { note: @note } %>
  <% end %>

  <%= turbo_stream.replace "#{dom_id @note}" do %>
    <%= render partial: "note", locals: { note: @note } %>
  <% end %>

<% else %>
  <%= turbo_stream.replace 'error_message' do %>
    <%= render 'shared/error_message', message: @note.errors.full_messages.to_sentence %>
  <% end %>
<% end %>
