<%= form_with model: note, id: "#{dom_id note}_update" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: f_label %>
    <%= f.text_field :title, class: f_control %>
  </div>
  <div class="mb-3">
    <%= f.label :body, class: f_label %>
    <%= f.text_field :body, class: f_control %>
  </div>
  <div class="mb-3">
    <%= f.label :note_date, class: f_label %>
    <%= f.date_field :note_date, class: f_control %>
  </div>

  <%= f.submit 'Update', class: blue_btn %>
<% end %>
