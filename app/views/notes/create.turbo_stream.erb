<% if @note.valid? %>
<%= turbo_stream.prepend 'notes', @note %>

<%= turbo_stream.replace "#{dom_id Note.new}_form" do %>
  <%= render 'form', post: Note.new %>
<% end %>

<% else %>
  <%= turbo_stream.replace 'error_message' do %>
    <%= render 'shared/error_message', message: @note.errors.full_messages.to_sentence %>
  <% end %>
<% end %>
